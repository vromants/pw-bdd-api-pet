{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"./node_modules/*",
			"./.features-gen/*",
			"./.temp/*",
			"./playwright-report/**"
		]
	}
}
